{
  "name": "meals",
  "version": "1.0.0",
  "description": "a diary of cooked meals",
  "main": "index.js",
  "scripts": {
    "develop": "npm-run-all --parallel develop-client develop-server",
    "develop-server": "cross-env PORT=7777 IP=192.168.1.10 nodemon --watch server-source --exec babel-node ./server-source/app.js",
    "develop-client": "webpack-dev-server --config ./webpack/webpack.public.dev.js",
    "build-client": "webpack --config ./webpack/webpack.public.prod.js",
    "build-server": "webpack --config ./webpack/webpack.server.js",
    "serve": "npm run build-client && npm run build-server && cross-env PORT=7777 IP=localhost node server/server.js",
    "postinstall": "npm run build-client && npm run build-server",
    "debug-server": "yarn build-server && cross-env PORT=7777 IP=192.168.1.10 node --inspect-brk=7777 server/server.js"
  },
  "author": "code24seven",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "express": "^4.17.0",
    "multer": "^1.4.0",
    "nodemailer": "^6.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.4.7",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  }
}
